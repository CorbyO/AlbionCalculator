                        </Button>

                        <!-- 10 -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="영양분 10"/>
                        <TextBlock Grid.Row="6" Grid.Column="1" Text="→" FontSize="16" HorizontalAlignment="Center"/>
                        <Button Grid.Row="6" Grid.Column="2" Classes="TextButton" Click="OnCopyText">
                            <TextBlock Name="Price10" Text="0" FontWeight="Bold"/>
                            <Button.Flyout><Flyout ShowMode="TransientWithDismissOnPointerMoveAway"><TextBlock Text="복사되었습니다!"/></Flyout></Button.Flyout>
                        </Button>

                        <!-- 14 -->
                        <TextBlock Grid.Row="7" Grid.Column="0" Text="영양분 14"/>
                        <TextBlock Grid.Row="7" Grid.Column="1" Text="→" FontSize="16" HorizontalAlignment="Center"/>
                        <Button Grid.Row="7" Grid.Column="2" Classes="TextButton" Click="OnCopyText">
                            <TextBlock Name="Price14" Text="0" FontWeight="Bold"/>
                            <Button.Flyout><Flyout ShowMode="TransientWithDismissOnPointerMoveAway"><TextBlock Text="복사되었습니다!"/></Flyout></Button.Flyout>
                        </Button>

                        <!-- 20 -->
                        <TextBlock Grid.Row="8" Grid.Column="0" Text="영양분 20"/>
                        <TextBlock Grid.Row="8" Grid.Column="1" Text="→" FontSize="16" HorizontalAlignment="Center"/>
                        <Button Grid.Row="8" Grid.Column="2" Classes="TextButton" Click="OnCopyText">
                            <TextBlock Name="Price20" Text="0" FontWeight="Bold"/>
                            <Button.Flyout><Flyout ShowMode="TransientWithDismissOnPointerMoveAway"><TextBlock Text="복사되었습니다!"/></Flyout></Button.Flyout>
                        </Button>

                        <!-- 30 -->
                        <TextBlock Grid.Row="9" Grid.Column="0" Text="영양분 30"/>
                        <TextBlock Grid.Row="9" Grid.Column="1" Text="→" FontSize="16" HorizontalAlignment="Center"/>
                        <Button Grid.Row="9" Grid.Column="2" Classes="TextButton" Click="OnCopyText">
                            <TextBlock Name="Price30" Text="0" FontWeight="Bold"/>
                            <Button.Flyout><Flyout ShowMode="TransientWithDismissOnPointerMoveAway"><TextBlock Text="복사되었습니다!"/></Flyout></Button.Flyout>
                        </Button>

                        <!-- 200 -->
                        <TextBlock Grid.Row="10" Grid.Column="0" Text="영양분 200"/>
                        <TextBlock Grid.Row="10" Grid.Column="1" Text="→" FontSize="16" HorizontalAlignment="Center"/>
                        <Button Grid.Row="10" Grid.Column="2" Classes="TextButton" Click="OnCopyText">
                            <TextBlock Name="Price200" Text="0" FontWeight="Bold"/>
                            <Button.Flyout><Flyout ShowMode="TransientWithDismissOnPointerMoveAway"><TextBlock Text="복사되었습니다!"/></Flyout></Button.Flyout>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>